<%- include('layout') %>
<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
</head>
<body>
<div class="content">
<h1>Delete Author</h1>
<p>Are you sure you want to delete <%= author.first_name %> <%= author.family_name %>?</p>
<form method="POST" action="/catalog/author/<%= author._id.toString() %>/delete">
    <button type="submit">Delete</button>
    <a href="/catalog/author/<%= author._id %>">Cancel</a>
</form>
</div>
</body>
</html>
